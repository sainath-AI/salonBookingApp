<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <EditText
        android:id="@+id/etImgUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:hint="Paste Image Url here"
        android:background="@drawable/edit_txt_shape"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/etSalonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:hint="Add Salon Name here"
        android:background="@drawable/edit_txt_shape"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/etBarberName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:hint="Add Barber Name here"
        android:background="@drawable/edit_txt_shape"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:hint="Add Location here"
        android:background="@drawable/edit_txt_shape"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Add to list"
        android:layout_margin="10dp"
        android:backgroundTint="#9360f9"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Of Admins"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:textColor="@color/black"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/revBom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

</LinearLayout>